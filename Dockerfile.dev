# Use Node.js Alpine for dev
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies first
COPY package.json package-lock.json ./
RUN npm ci

# Copy the rest of the app
COPY . .

# Expose Vite dev server port
EXPOSE 3000

# Default command to start Vite dev server
CMD ["npm", "run", "dev"]
